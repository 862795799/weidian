/**index.wxss**/

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.usermotto {
    margin-top: 200px;
}

.dl{
    margin-top: 10%;
}

input {
    width: 250px;
    height: 33px;
    border: 1px solid lightgray;
    border-radius: 25px;
    padding-left: 10px;
}

.a {
    margin-top: 10px;
    margin-left: 10px;
    margin-right: 10px;
    height: 50px;
    justify-content: flex-start;
    display: flex;
    align-items: center;
}

button{
    margin-top: 9%;
    border-radius: 15px;
    border: 1px solid lightgray;
    background-color: #00CCFF;
}

.title{
    font-size: 25px;
    text-align: center;
    font-weight: bold;
    margin: 0 auto;
}